import { useReactTable } from "@tanstack/react-table";
import { trpc } from "@/lib/trpc";

export function CustomersTable() {
  const { data, isLoading } = trpc.customers.list.useQuery();
  
  const table = useReactTable({
    data: data ?? [],
    // ... table configuration
  });
  
  // ... table rendering
}
```
